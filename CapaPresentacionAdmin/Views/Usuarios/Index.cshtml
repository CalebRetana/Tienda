@model IEnumerable<CapaEntidades.CapaEntidades.Usuario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
</head>

<h1>Usuarios</h1>
<div class="card">
    <div class="card-header">
        <i class="fas fa-users me-3"></i>Usuarios
    </div>
    <div class="card-body">
        <a asp-action="Create" class="btn btn-success mt-1 mb-2">Crear Nuevo</a>
        <table id="usuariosTable" class="table table-striped nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>Nombres</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>Activo</th>
                    <th>Fecha Registro</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Nombres</td>
                        <td>@item.Apellidos</td>
                        <td>@item.Correo</td>
                        <td>
                            @if (item.Activo == true)
                            {
                                <span class="badge bg-success">Sí </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No</span>
                            }
                        </td>

                        <td>@item.FechaRegistro</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdUsuario">
                                <i class="fas fa-pen-to-square"></i>
                            </a> |
                            <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdUsuario">
                                <i class="fas fa-eye"></i>
                            </a> |
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdUsuario">
                                <i class="fas fa-trash-can"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#usuariosTable').DataTable({
            responsive: true,
            language: {
                url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-MX.json"
            }
        });
    });
</script>






