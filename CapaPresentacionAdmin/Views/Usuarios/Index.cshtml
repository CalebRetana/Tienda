@model IEnumerable<CapaEntidades.CapaEntidades.Usuario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
</head>

<h1>Usuarios</h1>
<div class="card">
    <div class="card-header" style="background-color:#685752; color: white;">
        <i class="fas fa-users me-3"></i>Usuarios
    </div>
    <div class="card-body" style="background-color: #997C70; color: white;">
        <a asp-action="Create" class="btn mt-1 mb-2" style="background-color:#8EB486">Nuevo Usuario</a>
        <table id="usuariosTable" class="table table-striped nowrap" style="width:100%">
            <thead>
                <tr style="color: white">
                    <th >Nombres</th>
                    <th>Apellidos</th>
                    <th>Correo</th>
                    <th>Activo</th>
                    <th>Fecha Registro</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody style="color: #FDF7F4">
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="color: #FDF7F4">@item.Nombres</td>
                        <td style="color: #FDF7F4">@item.Apellidos</td>
                        <td style="color: #FDF7F4">@item.Correo</td>
                        <td style="color: #FDF7F4">
                            @if (item.Activo == true)
                            {
                                <span class="badge" style="background-color: #B1C29E">Sí </span>
                            }
                            else
                            {
                                <span class="badge" style="background-color: #E5989B">No </span>
                            }
                        </td>

                        <td style="color: #FDF7F4">@item.FechaRegistro</td>
                        <td style="color: #FDF7F4">
                            <a asp-action="Edit" class="btn" style="background-color: #FADA7A" asp-route-id="@item.IdUsuario">
                                <i class="fas fa-pen-to-square"></i>
                            </a> |
                            <a asp-action="Details" class="btn" style="background-color: #98D8EF" asp-route-id="@item.IdUsuario">
                                <i class="fas fa-eye"></i>
                            </a> |
                            <a asp-action="Delete" class="btn" style="background-color: #E5989B" asp-route-id="@item.IdUsuario">
                                <i class="fas fa-trash-can"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#usuariosTable').DataTable({
            responsive: true,
            language: {
                url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-MX.json"
            }
        });
    });
</script>






