@model CapaEntidades.CapaEntidades.Usuario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="display: flex; justify-content:center;">¿Quieres eliminar a @Html.DisplayFor(model => model.Nombres)?</h3>
<div style="display: flex; flex-direction: column; align-items: center; width: 100%;">
    <hr style="width: 100%; max-width: 600px;" />
    <dl class="row" style="width: 100%; max-width: 600px;">
        <dt class="col-sm-2" >
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class="col-sm-10" >
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class="col-sm-2" >
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class="col-sm-10" >
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Activo == true)
            {
                <span class="badge bg-success">Sí </span>
            }
            else
            {
                <span class="badge bg-danger">No</span>
            }
        </dd>
        <dt class="col-sm-2">
           Fecha de Registro
        </dt>
        <dd class="col-sm-10" >
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
</div>

<div style="display: flex; justify-content:center;">
<form asp-action="Delete">
        <input type="hidden" asp-for="IdUsuario" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="btn btn-info" asp-action="Index">Cancelar</a>
    </form>
</div>
