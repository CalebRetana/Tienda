@{
    ViewData["Title"] = "Home Page";
}
<h1 class="mt-4">Dashboard</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Dashboard</li>
</ol>
<div class="row">
    <div class="col-xl-3 col-md-6">
        <div class="card text-white mb-4" style="background-color: #8EB486">
            <div class="card-body">
                <div class="row">
                    <div class=" col-sm-9">
                        <h6>Cantidad Clientes</h6>
                        <p>@ViewBag.CantidadClientes</p>
                    </div>
                    <div class=" col-sm-3">
                        <i class="fas fa-user fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card text-white mb-4" style="background-color: #FADA7A">
            <div class="card-body">
                <div class="row">
                    <div class=" col-sm-9">
                        <h6>Cantidad Ventas</h6>
                        <p>@ViewBag.CantidadVentas</p>
                    </div>
                    <div class=" col-sm-3">
                        <i class="fas fa-shopping-bag fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="card text-white mb-4" style="background-color: #E5989B">
            <div class="card-body">
                <div class="row">
                    <div class=" col-sm-9">
                        <h6>Cantidad Productos</h6>
                        <p>@ViewBag.CantidadProductos</p>
                    </div>
                    <div class=" col-sm-3">
                        <i class="fas fa-apple-whole fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card mb-4">
    <div class="card-header" style="background-color:#685752; color: white;">
        <i class="fas fa-tags me-1"></i>
        Historial Ventas
    </div>
    <div class="card-body" style="background-color: #997C70; color: white;">
        <form>
            <div class="row align-items-end">
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha de Inicio:</label>
                        <input class="form-control" style="border-radius: 25px; background-color: #685752; color:white;" type="text" id="txtFechaInicio" name="fechaInicio" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Fecha de Fin:</label>
                        <input class="form-control" style="border-radius: 25px; background-color: #685752; color:white;" type="text" id="txtFechaFin" name="fechaFin" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="mb-2">
                        <label class="form-label">Id transacción:</label>
                        <input class="form-control" style="border-radius: 25px; background-color: #685752; color:white;" type="text" id="txtIdTransaccion" name="idTransaccion" />
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn " id="btnBuscar" type="button" style="background-color: #98D8EF"><i class=" fas fa-search"></i> Buscar</button>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="d-grid mb-2">
                        <button class="btn btn-success" type="submit" style="background-color: #B1C29E; color: black;"><i class=" fas fa-file-excel"></i> Exportar</button>
                    </div>
                </div>
            </div>
        </form>
        <hr />

        <div class="row">
            <div class="col-sm-12">
                <table id="table" class="display cell-border" style="width: 100%">
                    <thead>
                        <tr>
                            <th>Fecha Venta</th>
                            <th>Cliente</th>
                            <th>Producto</th>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>ID Transacción</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css">
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>

<script>
    $(document).ready(function () {
        $("#txtFechaInicio").datepicker({
            dateFormat: "dd-mm-yy"
        }).datepicker('setDate', new Date())
        $("#txtFechaFin").datepicker({
            dateFormat: "dd-mm-yy"
        }).datepicker('setDate', new Date());
    });
</script>
