@model IEnumerable<CapaEntidades.CapaEntidades.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
</head>
<h1>Marcas</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Productoes")">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Crear</li>
</ol>
<div class="card">
    <div class="card-header">
        <i class="fas fa-list me-3"></i>Productos
    </div>
    <div class="card-body">
        
        <p>
            <a asp-action="Create" class="btn btn-success mt-1 mb-2">Nuevo producto</a>
        </p>
        
        <table id="MarcaTable" class="table table-striped nowrap" style="width:100%; text-align: center; vertical-align: middle;">
            <thead>
                <tr>
                    <th style="text-align: center; vertical-align: middle;">
                        Producto
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        Descripción
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        Cantidad
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.Activo)
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        @Html.DisplayNameFor(model => model.categoria)
                    </th>
                    <th>
                        Marca
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td>
                           $@Html.DisplayFor(modelItem => item.Precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td>
                            @if (item.Activo == true)
                            {
                                <span class="badge bg-success">Sí </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">No </span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.categoria.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca.Descripcion)
                        </td>
                        <td>
                            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.IdProducto">
                                <i class="fas fa-pen-to-square"></i>
                            </a> |
                            <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.IdProducto">
                                <i class="fas fa-eye"></i>
                            </a> |
                            <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.IdProducto">
                                <i class="fas fa-trash-can"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#MarcaTable').DataTable({
            responsive: true,
            language: {
                url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-MX.json"
            }
        });
    });
</script>

