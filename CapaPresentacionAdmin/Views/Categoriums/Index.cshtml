@model IEnumerable<CapaEntidades.CapaEntidades.Categorium>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.5.0/css/responsive.dataTables.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js"></script>
</head>
<h1>Categorias</h1>
<div class="card" style="background-color:#997C70; color: white;">
    <div class="card-header" style="background-color: #685752; color: white;">
        <i class="fas fa-list me-3"></i>Categorias
    </div>
    <div class="card-body">
        <p>
            <a asp-action="Create" class="btn mt-1 mb-2" style="background-color:#8EB486">Nueva Categoria</a>
        </p>
        <table id="categoriaTable" class="table table-striped nowrap" style="width:100%; text-align: center; vertical-align: middle;">
            <thead>
                <tr style="color: #FDF7F4">
                    <th style="text-align: center; vertical-align: middle;">
                        Categoria
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        Estado
                    </th>
                    <th style="text-align: center; vertical-align: middle;">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="color: #FDF7F4">
                            @Html.DisplayFor(modelItem => item.Descripcion)
                        </td>
                        <td style="color: #FDF7F4">
                            @if (item.Activo == true)
                            {
                                <span class="badge" style="background-color: #8EB486">Activo </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Desactivada</span>
                            }
                        </td>
                        <td style="color: #FDF7F4">
                            <a asp-action="Edit" class="btn" style="background-color: #FADA7A" asp-route-id="@item.IdCategoria">
                                <i class="fas fa-pen-to-square"></i>
                            </a> |
                            <a asp-action="Details" class="btn" style="background-color: #98D8EF" asp-route-id="@item.IdCategoria">
                                <i class="fas fa-eye"></i>
                            </a> |
                            <a asp-action="Delete" class="btn" style="background-color: #E5989B" asp-route-id="@item.IdCategoria">
                                <i class="fas fa-trash-can"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#categoriaTable').DataTable({
            responsive: true,
            language: {
                url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-MX.json"
            }
        });
    });
</script>
