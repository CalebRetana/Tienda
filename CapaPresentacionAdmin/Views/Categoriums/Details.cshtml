@model CapaEntidades.CapaEntidades.Categorium

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="display: flex; justify-content:center;">Detalles</h1>

<h4 style="display: flex; justify-content:center;">Categoria</h4>
<hr />
<div class="row" style="display: flex; justify-content:center;">
    <dl class="row" style="display: flex; justify-content:center;">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Activo)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Activo == true)
            {
                <span class="badge bg-success">Sí</span>
            }
            else if (Model.Activo == false)
            {
                <span class="badge bg-danger">No</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRegistro)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaRegistro)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-success" asp-action="Edit" asp-route-id="@Model?.IdCategoria">Edit</a> |
    <a class="btn btn-danger" asp-action="Index">Regresar</a>
</div>
